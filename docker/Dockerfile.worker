# Worker service Dockerfile for background tasks
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Install uv for faster package management
RUN pip install --no-cache-dir uv

# Copy dependency files and source code (needed for editable install)
COPY pyproject.toml README.md ./
COPY src/ ./src/

# Install dependencies
RUN uv pip install --system --no-cache -e .

# Copy additional application files
COPY configs/ ./configs/
COPY scripts/ ./scripts/

# Create necessary directories
RUN mkdir -p data models logs mlruns

# Default command (can be overridden in docker-compose)
CMD ["python", "-m", "openquant.ingestion.scheduler"]

